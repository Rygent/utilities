{
  "name": "@rygent/spotify",
  "version": "1.1.1",
  "description": "An UNOFFICIAL wrapper for Spotify REST API written in typescript.",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepack": "yarn build",
    "bump": "cliff-jumper"
  },
  "devDependencies": {
    "@favware/cliff-jumper": "^2.2.3",
    "@types/node": "^22.8.6",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^9.14.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "homepage": "https://github.com/Rygent/Utilities/tree/main/packages/spotify",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rygent/Utilities.git",
    "directory": "packages/spotify"
  },
  "bugs": {
    "url": "https://github.com/Rygent/Utilities/issues"
  },
  "files": [
    "./dist/**/*.js*",
    "./dist/**/*.mjs*",
    "./dist/**/*.d*"
  ],
  "engines": {
    "node": ">=18.12.0"
  },
  "keywords": [
    "spotify",
    "wrapper",
    "api",
    "spotify-api"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.5.1"
}
