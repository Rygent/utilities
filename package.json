{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "root-utilities",
  "type": "module",
  "scripts": {
    "test": "dotenvx run -f .env.test -- vitest run",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}\"",
    "check-update": "turbo run check-update",
    "postinstall": "is-ci || husky",
    "update": "pnpm --recursive update --interactive",
    "update:latest": "pnpm --recursive update --interactive --latest"
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/rygent/utilities.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-angular": "^19.5.0",
    "@dotenvx/dotenvx": "^1.23.0",
    "@favware/npm-deprecate": "^1.0.7",
    "@sapphire/node-utilities": "^1.0.2",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^2.1.5",
    "colorette": "^2.0.20",
    "esbuild-plugin-file-path-extensions": "^2.1.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-terrax": "^0.3.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "is-ci": "^3.0.1",
    "lodash.merge": "^4.6.2",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vitest": "^2.1.5"
  },
  "packageManager": "pnpm@9.13.0"
}
