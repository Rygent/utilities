{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "bump": {
      "dependsOn": [],
      "outputs": ["CHANGELOG.md"]
    },
    "test": {
      "dependsOn": [],
      "outputs": ["coverage/**"],
      "env": ["SPOTIFY_ID", "SPOTIFY_SECRET", "TWITCH_ID", "TWITCH_SECRET"]
    }
  }
}
